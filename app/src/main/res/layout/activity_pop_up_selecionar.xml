<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/pop_bg">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_border"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp">>

        <Button
            android:id="@+id/btnCancelarSelecionar"
            android:layout_width="218dp"
            android:layout_height="49dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/pop_cancelar"
            android:text="Cancelar"
            android:textColor="#F5ECD9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnSenador"
            android:layout_width="218dp"
            android:layout_height="49dp"
            android:layout_marginBottom="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/pop_selecionar"
            android:text="VEREADOR"
            android:textColor="#F5ECD9"
            app:layout_constraintBottom_toTopOf="@+id/btnCancelarSelecionar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnGovernador"
            android:layout_width="218dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/pop_selecionar"
            android:text="GORVERNADOR"
            android:textColor="#F5ECD9"
            app:layout_constraintBottom_toTopOf="@+id/btnPrefeito"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnPrefeito"
            android:layout_width="218dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/pop_selecionar"
            android:text="PREFEITO"
            android:textColor="#F5ECD9"
            app:layout_constraintBottom_toTopOf="@+id/btnSenador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnVereador"
            android:layout_width="218dp"
            android:layout_height="49dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pop_selecionar"
            android:text="VEREADOR"
            android:textColor="#F5ECD9"
            app:layout_constraintBottom_toTopOf="@+id/btnGovernador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCandidatoSelecionar"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtCandidatoSelecionar"
            android:layout_width="205dp"
            android:layout_height="47dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="8dp"
            android:text="CANDIDATO"
            android:textColor="#2BADB5"
            android:textSize="36sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCandidatoSelecionar2" />

        <TextView
            android:id="@+id/txtSelecionar"
            android:layout_width="109dp"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:text="Promover"
            android:textSize="24sp"
            android:typeface="sans"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCandidatoSelecionar2" />

        <TextView
            android:id="@+id/txtCandidatoSelecionar2"
            android:layout_width="172dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="CANDIDATO"
            android:textColor="#2BADB5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>