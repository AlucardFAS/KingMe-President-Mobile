<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Login"
    android:id="@+id/relativeLayout">

    <EditText
        android:id="@+id/seunome"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:inputType="text|textUri|textEmailAddress"
        android:text="Seu nome"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/suasala"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:inputType="text|textUri|textEmailAddress"
        android:text="Nome da sala"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/seunome3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <EditText
        android:id="@+id/suasenha"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:layout_marginTop="348dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:inputType="text|textUri|textEmailAddress"
        android:text="Senha"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/entrarjogo"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="56dp"
        android:background="#E84D5B"
        android:fontFamily="@font/latoblackitalic"
        android:text="ENTRAR NO JOGO"
        android:textAlignment="center"
        android:textColor="#F5ECD9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/suasala"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seunome"
        app:layout_constraintVertical_bias="0.146" />

    <Button
        android:id="@+id/entrarsala"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="408dp"
        android:background="#E84D5B"
        android:fontFamily="@font/latoblackitalic"
        android:text="CRIAR UM JOGO"
        android:textAlignment="center"
        android:textColor="#F5ECD9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seunome"
        app:layout_constraintVertical_bias="0.054" />

</android.support.constraint.ConstraintLayout>



